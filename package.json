{
  "name": "pictonet",
  "version": "0.1.0",
  "description": "A specialized LLM to convert communicative text intent into semantically structured and accessible SVG pictograms (Augmentative and Alternative Communication).",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/api/server.js",
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "nodemon src/api/server.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm-run-all build:server build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts",
    "precommit": "npm run lint && npm run test",
    "postinstall": "cd client && npm install",
    "// ML Core Scripts (Executing Python):": "",
    "ml:train": "python ml_core/train.py",
    "ml:infer": "python ml_core/inference.py"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mediafranca/pictonet.git"
  },
  "keywords": [
    "llm",
    "nlp",
    "aac",
    "accessibility",
    "svg",
    "ai",
    "pictogram"
  ],
  "author": "mediafranca",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
